@model AspnetCoreStudy.Models.Note

<div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <form class="form-horizontal" method="post" asp-controller="Note" asp-action="Edit">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label>제목</label>
                <input type="text" class="form-control" asp-for="NoteTitle" placeholder="제목 입력" />
                <span class="text-danger" asp-validation-for="NoteTitle"></span>
            </div>
            <div class="form-group">
                <textarea class="form-control editor" asp-for="NoteContents" placeholder="내용 입력" rows="15"></textarea>
                <span class="text-danger" asp-validation-for="NoteContents"></span>
            </div>
            <div>
                <button type="submit" class="btn btn-primary">게시</button>
                <a type="submit" class="btn btn-default" asp-controller="Note" asp-action="Index">취소</a>
            </div>
        </form>
    </div>
    <div class="col-lg-4"></div>
</div>